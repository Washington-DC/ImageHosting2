<UserControl x:Class="ImageHosting.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageHosting"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <UserControl.Resources>
    </UserControl.Resources>
    <Grid>
        <Image Source="back.jpg" Opacity="0.8" />
        <Border Background="Transparent" Width="50" Height="50" HorizontalAlignment="Right" VerticalAlignment="Bottom" >
            <Path Fill="BlueViolet" Stroke="#989898" VerticalAlignment="Center"
                            Data="M0,50 L50,50 L50,0" Stretch="Fill">
            </Path>
        </Border>
    </Grid>
</UserControl>
